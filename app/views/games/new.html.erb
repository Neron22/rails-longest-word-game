
<div class="container">
  <div class="title">
    <h1>New game</h1>
    <h2>(mots anglais seulement)</h2>
  </div>
  <div class="game">
    <% (@letters.shuffle.first(8)).each do |letter| %>
      <div class="letter">
        <%= letter %>
      </div>
    <% end %>
  </div>
  <div class="new-letters">
  </div>
  <div class="link">
    <form action="/score">
      <input type="text" name="word" id="link" placeholder="Clique sur les lettres">
      <p id="effacer">&#8592</p>
      <input type="submit" value="Go!">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>

<%= javascript_pack_tag 'game'%>
